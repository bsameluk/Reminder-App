<p style="color: green"><%= notice %></p>

<h1>Reminders</h1>

<table style="min-width: 60%;">
  <tr>
    <td><h3>Id</h3></td>
    <td><h3>Title</h3></td>
    <td><h3>Description</h3></td>
    <td><h3>Scheduled at</h3></td>
    <td><h3>Price</h3></td>
    <td><h3>Currency</h3></td>
    <td><h3>Frequency</h3></td>
    <td colspan="2"><h3>Actions</h3></td>
  </tr>
  <% @reminders.each do |reminder| %>
    <tr>
      <td><%= reminder.id %></td>
      <td><%= reminder.title %></td>
      <td><%= reminder.description %></td>
      <td><%= reminder.formatted_scheduled_at %></td>
      <td><%= reminder.price %></td>
      <td><%= reminder.currency %></td>
      <td><%= reminder.frequency %></td>
      <td><%= link_to "Edit", edit_reminder_path(reminder) %></td>
      <td><%= button_to "Delete", reminder_path(reminder), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to "New reminder", new_reminder_path %>
